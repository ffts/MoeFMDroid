<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="20"
        android:addStatesFromChildren="true"
        android:gravity="center_horizontal">
        <TextView 
        	android:id="@+id/title"
        	android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textSize="20dip"
			android:gravity="center_horizontal"
			android:layout_alignParentTop="true"
			android:layout_margin="10dip"
			android:singleLine="true"
			android:scrollHorizontally="true"
			android:marqueeRepeatLimit="-1"
			android:ellipsize="marquee"/>
    	<ImageView 
        	android:id="@+id/cover"
        	android:layout_width="240dip"
        	android:layout_height="240dip"
        	android:layout_centerInParent="true"
        	android:layout_margin="10dip"
        	android:layout_below="@+id/title"/>
    	<TextView 
        	android:id="@+id/artist"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:gravity="center"
        	android:layout_margin="3dip"
        	android:layout_above="@+id/ablum_line"
        	android:singleLine="true"
        	android:scrollHorizontally="true"
        	android:ellipsize="marquee"/>
    	<LinearLayout 
    	    android:id="@+id/ablum_line"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:orientation="horizontal"
    	    android:layout_above="@+id/time"
    	    android:gravity="center"
    	    >
    	    <ImageView 
    	        android:id="@+id/favablum"
    	        android:src="@drawable/btn_ablum_like"
    	        android:layout_height="20dip"
    	        android:layout_width="20dip"/>
    	    <TextView 
        		android:id="@+id/ablum"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_margin="3dip"
        		android:singleLine="true"
        		android:scrollHorizontally="true"
        		android:ellipsize="marquee"/>
    	</LinearLayout>
    	<LinearLayout 
    	    android:id="@+id/time"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_above="@+id/progress"
    	    android:layout_margin="2dip">
    	    <TextView
    	        android:id="@+id/curtime"
    	        android:layout_width="0dip"
    	        android:layout_height="fill_parent"
				android:layout_marginLeft="15dip"
				android:layout_weight="1"
				android:gravity="left" />
    	    <TextView 
    	        android:id="@+id/totaltime"
    	        android:layout_width="0dip"
    	        android:layout_height="fill_parent"
				android:layout_marginRight="15dip"
				android:layout_weight="1"
				android:gravity="right" />
    	</LinearLayout>
    	<!-- <TextView 
    	    android:id="@+id/time"
    	    android:layout_width="fill_parent"
    	    android:layout_height="wrap_content"
    	    android:layout_above="@+id/progress"
    	    android:layout_margin="3dip"
    	    android:text="xx:xx/xx:xx"
    	    android:gravity="center_horizontal"/> -->
    	<ProgressBar 
        	android:id="@+id/progress"
        	style="@style/ProgressBarHolo.Horizontal"
        	android:layout_width="fill_parent"
        	android:max="100"
        	android:layout_height="wrap_content"
        	android:layout_margin="2dip"
        	android:layout_marginLeft="5dip"
        	android:layout_marginRight="5dip"
        	android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="240dip"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dip">
    	<ImageButton
            android:id="@+id/like"
            android:focusable="true"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_like"
            android:background="#00000000" 
            android:layout_weight="1" />
        <ImageButton 
            android:id="@+id/play"
            android:focusable="true"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_pause"
            android:background="#00000000"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/next"
            android:focusable="true"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_next"
            android:background="#00000000"
            android:layout_weight="1" />
        <ImageButton 
            android:id="@+id/unlike"
            android:focusable="true"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_unlike"
            android:background="#00000000"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>